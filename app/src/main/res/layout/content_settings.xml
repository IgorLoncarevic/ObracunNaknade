<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aperslajsgmail.obracunnaknade.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ovde unesite koeficijente kojima se mnozi oporezivi prihod. Na primer, ako je doprinos za PIO 26%, unesite 0.26 u odgovarajuce polje."
            android:id="@+id/hint"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/prvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/hint">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="Unesite porez na &#10;dohodak gradjana:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPrvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="0.2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drugi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/prvi">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="Unesite doprinos &#10;za PIO:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentDrugi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="0.26" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/treci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/drugi">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="Unesite doprinos za &#10;zdravstveno osiguranje:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentTreci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="0.103" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cetvrti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/treci">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="Unesite koeficijent za &#10;preracun (nezaposleni):"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPreracunNez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1.819505095" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/cetvrti">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="Unesite koeficijent za &#10;preracun (zaposleni):"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPreracunZap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1.582278481" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sacuvaj"
            android:id="@+id/button2"
            android:layout_below="@id/peti"
            android:layout_marginTop="20sp"
            android:onClick="saveInfo"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/peti"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vrati koeficijente na&#10;pocetne vrednosti:"
                android:id="@+id/textView9"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default"
                android:id="@+id/button3"
                android:layout_marginLeft="12sp"
                android:onClick="onClickDefault" />
        </LinearLayout>

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/imageButton"
            android:src="@drawable/arrows"
            android:adjustViewBounds="true"
            android:layout_below="@id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:onClick="onClickNazad" />


    </RelativeLayout>
</ScrollView>
