<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aperslajsgmail.obracunnaknade.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obavestenjeTxt"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/prvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hint"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="@string/porezSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPrvi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="@string/porezSettEdit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drugi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prvi"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="@string/pioSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentDrugi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="@string/pioSettEdit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/treci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drugi"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="@string/zdravstvenoSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentTreci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:text="@string/zdravstvenoSettEdit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cetvrti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/treci"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="@string/nezaposleniSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPreracunNez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@string/nezaposleniSettEdit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cetvrti"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:paddingRight="2dp"
                android:text="@string/zaposleniSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/koeficijentPreracunZap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@string/zaposleniSettEdit" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/peti"
            android:layout_marginTop="20sp"
            android:onClick="saveInfo"
            android:text="@string/sacuvajBtn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/peti"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultSettTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:onClick="onClickDefault"
                android:text="@string/defaultBtn" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_below="@id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:adjustViewBounds="true"
            android:onClick="onClickNazad"
            android:src="@drawable/arrows" />


    </RelativeLayout>
</ScrollView>
